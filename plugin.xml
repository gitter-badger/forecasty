<?xml version="1.0" encoding="utf-8"?>
<e107Plugin name="Forecasty" lan="" version="1.0" date="2015-12-07" compatibility="2.0" installRequired="true" >
	<author name="Patrick Weaver" url="http://trickmod.com" />
	<summary lan="">A vulgar weather information plugin.</summary>
	<description lan="">Displays weather information, vulgarity included, for your current visitor.</description>
	<keywords>
		<word>weather</word>
		<word>forecast</word>
	</keywords>
	<category>content</category>
	<copyright>2015</copyright>
	<adminLinks>
		<link url="admin_config.php" description="" icon="" iconSmall="" primary="true" >LAN_CONFIGURE</link>
	</adminLinks>
	<pluginPrefs>
		<pref name='apiKey'></pref>
		<pref name='fallbackLocation'>0,0</pref>
		<pref name='tempType'>F</pref>
		<pref name='tempThreshold'>50</pref>
		<pref name='hotColor'>#ff0000</pref>
		<pref name='coldColor'>#0000ff</pref>
		<pref name='vulgarity'>low</pref>
	</pluginPrefs>
</e107Plugin>